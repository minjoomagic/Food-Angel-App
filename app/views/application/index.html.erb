  }
  .panel-footer h3 {
    font-size: 32px;
  }
  .panel-footer h4 {
    color: #aaa;
    font-size: 14px;
  }
  .panel-footer .btn {
    margin: 15px 0;
    background-color: #f4511e;
    color: #fff;
  }
  @media screen and (max-width: 768px) {
    .col-sm-4 {
      text-align: center;
      margin: 25px 0;
    }
  }

  #nav-bar-split {
    display: flex;
    justify-content: space-between;
    width: 80%;
  }

  #nav-bar-right {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 40%;
  }
